@page
@model EgdeBookingSystemV2.Pages.MyPage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<style>
    .tableFixed {
        table-layout: fixed;
    }
</style>


@if ((string)TempData["Fjern"] == "Fjernet")
{
    <div class="alert alert-success mt-4">
        <strong>Booking slettet</strong>
    </div>
}

<h2 class="mt-4 mx-2">
    Aktive bookinger
</h2>
<hr />

@if (Model.ActiveBookings.Count != 0)
{

    <table class="table tableFixed table-borderless table-striped table-hover ">
        <thead>
            <tr>

                <th class="h4" hidden>
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].UserEmail)
                </th>

                <th class="h4 ">
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].Equipment.Name)
                </th>


                <th class="h4">
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].StartDate)
                </th>


                <th class="h4">
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].EndDate)
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ActiveBookings)
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Equipment.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>

                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-egde">Fjern</a>
                        <a asp-page="./Details" asp-route-id="@item.ID">Detaljer</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h4 class="mt-2 mx-2">Du har ingen aktive bookinger</h4>
}

<div class="mt-4 mx1 border-dark border-top">

</div>

<h2 class="mt-4 mx-2">Historiske bookinger</h2>
<hr />


@if (Model.HistoricBookings.Count != 0)
{
    <table class="table tableFixed table-borderless table-striped table-hover ">
        <thead>
            <tr>
                <th class="h4 " hidden>
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].UserEmail)
                </th>

                <th class="h4 ">
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].Equipment.Name)
                </th>

                <th class="h4 ">
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].StartDate)
                </th>

                <th class="h4 ">
                    @Html.DisplayNameFor(model => model.ActiveBookings[0].EndDate)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HistoricBookings)
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Equipment.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @*<a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |*@
                        <a asp-page="/Bookings/Create" asp-route-id="@item.EquipmentID" class="btn btn-egde-blå">Book</a>
                        <a asp-page="./Details" asp-route-id="@item.ID">Detaljer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="mt-4 mx-2" >Du har ingen historiske bookinger</h4>
}


